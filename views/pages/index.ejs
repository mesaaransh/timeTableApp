<%- include("../partials/head", {title:"Home"}) %>

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include("../partials/sidebar.ejs") %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- Topbar -->
                    <%- include("../partials/header.ejs") %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                            </div>


                            <div class="wrapper px-5">

                                <form
                                    class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 w-100 navbar-search"
                                    action="/teacher" method="post">

                                    <div class="input-group">
                                        <input required type="text" list="teachers" class="form-control bg-light border-secondary small"
                                            placeholder="Search for..." name="teacher"/>

                                            <datalist id="teachers">
                                                <% for( let i = 0; i < teachers.length; i++ ) { %>
                                                    <option value= <%= teachers[i].id %> > <%= teachers[i].name %> </option>
                                                <% } %>
                                            </datalist>

                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="d-flex mt-2">
                                        <select class="form-control bg-light border-secondary small my-3"
                                            aria-label="Default select example" name="time">
                                            <option selected  value="1">Current Time</option>
                                            <option value="1"> 08:00 - 08:50 </option>
                                            <option value="2"> 08:50 - 09:40 </option>
                                            <option value="3"> 09:40 - 10:30 </option>
                                            <option value="4"> 10:30 - 11:20 </option>
                                            <option value="5"> 11:20 - 12:10 </option>
                                            <option value="6"> 12:10 - 13:00 </option>
                                            <option value="7"> 13:00 - 13:50 </option>
                                            <option value="8"> 13:50 - 14:40 </option>
                                            <option value="9"> 14:40 - 15:30 </option>
                                            <option value="10"> 15:30 - 16:20 </option>
                                            <option value="11"> 16:20 - 17:10 </option>
                                            <option value="12"> 17:10 - 18:00 </option>
                                        </select>
                                        
                                        <select class="form-control bg-light border-secondary small my-3 mx-5"
                                            aria-label="Default select example" name="day">
                                            <option selected value="1">Current Day</option>
                                            <option value="1">Monday</option>
                                            <option value="2">Tuesday</option>
                                            <option value="3">Wednesday</option>
                                            <option value="4">Thursday</option>
                                            <option value="5">Friday</option>
                                            <option value="6">Saturday</option>
                                        </select>

                                        <button class="btn btn-primary h-100 mt-3 ml-auto mb-5" type="submit"
                                            id="dropdownMenuButton">Submit
                                        </button>
                                    </div>

                                </form>

                                <div class="container-fluid" <%= error.display %> >

                                    <!-- 404 Error Text -->
                                    <div class="text-center">
                                        <div class="error mx-auto" data-text="404">404</div>
                                        <p class="lead text-gray-800 mb-5"><%= error.message %></p>
                                        <p class="text-gray-500 mb-0">It looks like you found a glitch in the matrix...</p>
                                    </div>
                
                                </div>

                                <div class="card shadow mt-5 mb-4 ml-md-3 my-2 my-md-0 w-100 border-left-<%= payload.statusClass %>" <%= payload.display %>>
                                    <div class="card-body">

                                        <div class="d-flex">
                                            <div>
                                                <h3 class="m-0 font-weight-bold text-primary d-flex"> 
                                                    <%= payload.name %>
                                                </h3>
                                                
                                                <div class="mt-auto pt-0 mb-3"> 
                                                    <h6 class="mt-0 pt-0 font-weight-bold text-secendory d-inline"> <%= payload.designation %> </h6>
                                                    |
                                                    <h6 class="font-weight-bold text-<%= payload.statusClass %> d-inline"><%= payload.status %></h6>
                                                </div>
                                            </div>

                                            <div class="ml-auto">
                                                <h6 class="mt-0 pt-0 font-weight-bold text-secendory ml-auto"><%= payload.startTime %> - <%= payload.endTime %></h6>
                                                <h6 class="mt-0 pt-0 font-weight-bold text-secendory ml-auto"><%= payload.day %></h6>
                                            </div>
                                        </div>

                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td>Teacher Code: </td>
                                                    <td class="pl-5"> <%= payload.code %> </td>
                                                </tr>
                                                <tr>
                                                    <td>Subject: </td>
                                                    <td class="pl-5"> <%= payload.subject %> </td>
                                                </tr>
                                                <tr>
                                                    <td>Subject Code: </td>
                                                    <td class="pl-5"> <%= payload.scode %> </td>
                                                </tr>
                                                <tr>
                                                    <td>Room: </td>
                                                    <td class="pl-5"> <%= payload.room %> </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                                <%- include("../partials/table.ejs") %>
                            </div>
                            
                        </div>
                        <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include("../partials/footer.ejs") %>
                    <!-- End of Footer -->
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <%- include("../partials/scrollToTop.ejs") %>

        <!-- Logout Modal-->
        <%- include("../partials/logoutModal.ejs") %> <%- include("../partials/foot.ejs") %>